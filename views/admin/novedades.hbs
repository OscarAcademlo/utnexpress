<div class="row">


<div class="col-10"  >
<h3>Listado de Novedades</h3>

</div>
<div class="col text-center" >
    <a href="/admin/novedades/agregar" class="btn btn-success"  ><i class="fas fa-plus" ></i>Nuevo</a>

</div>

</div>

<div class="row ">
<div class="col">
    <table class="table table-bordered "  >
        <thead>
            <tr class="table table-success table-striped">
                <th scope="col" >#</th>
                <th scope="col" >Titulo</th> 
                <th scope="col" >Subtitulo</th> 
                <th scope="col" >Noticia</th>
                <th scope="col" >Imagen</th> 



                <th scope="col" class="text-right" style="text-end" >Acciones</th>



            </tr>
        </thead>
        <tbody>
            {{#each novedades}}
         <tr>
            <th scope="row">{{id}}</th>
            <td>{{titulo}}</td>
            
            <td>{{subtitulo}}</td>
            <td>{{cuerpo}}</td>
            <td>{{{imagen}}}</td>
            <td class="text-center">
            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary" ><i class="fas fa-trash"></i></a>
            </td>
         </tr>
            {{/each}}
        </tbody>

    </table>
</div>


