<h3 class="agregar text-center">Modificar novedad</h3>
 
 <div class="container"  style="margin: auto">



<form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data" >
 
   <div class="mb-3">
      <input type="hidden" value="{{novedad.id}}"  name="id">
    </div>
    <div class="mb-3">
        <label for="">Titulo</label>
      <input type="text"  class="form-control"  name="titulo" value="{{novedad.titulo}}">
    </div>

     <div class="form-group" style="margin-bottom: 20px;">
        <label for="">Subtitulo</label>
        <input  type="text" class="form-control"  name="subtitulo" value="{{novedad.subtitulo}}" ></input>
      
    </div>
    <div class="form-group">
      <p>
        <label >Imagen: <input type="file" name="imagen" id="imagen"/></label>
      </p>
      <p>
        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen actual?</label>
        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
      </p>

    </div>
    <div class="form-group">
        <label for="">Cuerpo</label>
        <textarea  type="text" class="form-control"  name="cuerpo" >{{novedad.cuerpo}}</textarea>
      
    </div>
    

    
    <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Modificar</button>
  
</form>

 

 </div>
 {{#if error}}
<p style="margin-top: 20px;" class="text-center">{{message}}</p>
{{/if}}